{
  "name": "@wechatsync/core",
  "version": "2.0.0",
  "description": "WechatSync 核心逻辑 - 平台适配器、运行时抽象、同步引擎",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./adapters": {
      "types": "./src/adapters/index.ts",
      "import": "./src/adapters/index.ts",
      "require": "./src/adapters/index.ts"
    },
    "./runtime": {
      "types": "./src/runtime/index.ts",
      "import": "./src/runtime/index.ts",
      "require": "./src/runtime/index.ts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
