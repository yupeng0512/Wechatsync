    "@types/remarkable": "^2.0.8",
    "@types/turndown": "^5.0.6",
    "tsup": "^8.0.1",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
