    "marked": "^17.0.1",
    "rehype-parse": "^9.0.0",
    "rehype-remark": "^10.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "remarkable": "^2.0.1",
    "turndown": "^7.2.2",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.3.4",
